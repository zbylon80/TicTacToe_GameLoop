{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-tictactoe",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "if not exist build mkdir build && cl /nologo /EHsc /W4 /WX /std:c++20 main.cpp Game.cpp /Fe:build\\TicTacToe.exe"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "build",
      "problemMatcher": ["$msCompile"]
    },
    {
      "label": "clean-tictactoe",
      "type": "shell",
      "command": "cmd",
      "args": ["/c", "if exist build rmdir /s /q build"],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": "none",
      "problemMatcher": []
    }
  ]
}
